<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/iropkebatangm</item>
        <item name="android:windowBackground">@color/mainColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="menuTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:fontFamily">@font/iropkebatangm</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">100dp</item>

    </style>

</resources>
