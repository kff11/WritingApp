<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostsList.PostsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bottom_storke_toolbar"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/posts_nameWithPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="내가 쓴 글"
            android:textColor="@color/titleColor"
            android:textSize="19sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:gravity="right"
            android:background="@drawable/bottom_storke_title"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/posts_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0개의 조각글" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/posts_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp" />
    </LinearLayout>
</LinearLayout>