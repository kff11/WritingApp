<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/posts_recyclerview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/view_radius"
    android:orientation="horizontal"
    android:paddingTop="25dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/posts_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:text="제목"
            android:textColor="@color/titleColor"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/posts_item_write"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="내용이에유내용이에유내용이에유내용이에유내용이에유내용이에유내용이에유내용이에유내용이에유내용이에유내용이에유내용이에유" />
    </LinearLayout>



    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/posts_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="2019-12-18">

        </TextView>
    </LinearLayout>
</RelativeLayout>